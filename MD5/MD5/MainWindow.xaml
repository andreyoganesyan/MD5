<Window x:Class="MD5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MD5"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="600">
    <Grid>
        <Button x:Name="browseBtn" Content="Browse" VerticalAlignment="Top" Margin="0,10,50,0" Click="browseBtn_Click" HorizontalAlignment="Right" Width="75"/>
        <TextBox x:Name="folderPathTB" Height="23" TextWrapping="Wrap"  VerticalAlignment="Top" Margin="50,8,140,0" IsReadOnly="True"/>
        <DataGrid x:Name="hashesDataGrid" Margin="50,60,50,25" HorizontalAlignment="Stretch" FontFamily="Courier New" />

    </Grid>
</Window>
